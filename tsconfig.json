{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": false,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "lib/**/*",
    "hooks/**/*",
    "store/**/*",
    "**/*.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "admin-dashboard",
    "scripts",
    "supabase/functions",
    "middleware.ts",
    "__tests__",
    ".expo",
    "web-build",
    "dist"
  ]
}
