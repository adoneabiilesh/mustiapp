{
  "version": 2,
  "buildCommand": "cd admin-dashboard && npm install && npm run build",
  "outputDirectory": "admin-dashboard/.next",
  "installCommand": "cd admin-dashboard && npm install",
  "framework": "nextjs",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "origin-when-cross-origin"
        }
      ]
    }
  ]
}
